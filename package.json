{
  "name": "nimiq-validators",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev:mainnet": "pnpm run dev:packages && nuxi dev --remote --dotenv .env.mainnet",
    "dev:mainnet:prod": "pnpm run dev:packages && nuxi dev --remote=production --dotenv .env.mainnet",
    "dev": "pnpm run dev:packages && nuxi dev --remote --dotenv .env.testnet",
    "dev:local": "pnpm run dev:packages && nuxi dev --dotenv .env.local",
    "dev:packages": "pnpm --filter=./packages/* run dev",
    "build": "pnpm --filter=./packages/* run build && nuxi build",
    "generate": "nuxi generate",
    "preview": "npx nuxthub preview",
    "postinstall": "nuxi prepare",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache . --fix",
    "db:generate": "drizzle-kit generate",
    "db:delete": "drizzle-kit drop",
    "release": "dotenv release-it",
    "typecheck": "nuxi typecheck && pnpm --filter=./packages/* run typecheck"
  },
  "dependencies": {
    "@nimiq/core": "catalog:",
    "@nuxthub/core": "catalog:",
    "@unovis/ts": "catalog:",
    "@unovis/vue": "catalog:",
    "@vueuse/core": "catalog:",
    "defu": "catalog:",
    "drizzle-orm": "0.35.3",
    "identicons-esm": "catalog:",
    "nimiq-rpc-client-ts": "catalog:",
    "nimiq-validators-trustscore": "workspace:*",
    "nuxt": "catalog:",
    "pinia": "catalog:",
    "radix-vue": "catalog:",
    "svgo": "catalog:",
    "vue": "catalog:",
    "vue-router": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@nuxt/eslint": "catalog:",
    "@nuxt/image": "catalog:",
    "@nuxtjs/color-mode": "catalog:",
    "@pinia/nuxt": "catalog:",
    "@types/node": "catalog:",
    "@unocss/eslint-config": "catalog:",
    "@unocss/nuxt": "catalog:",
    "@unocss/preset-rem-to-px": "catalog:",
    "@unocss/reset": "catalog:",
    "@vueuse/nuxt": "catalog:",
    "drizzle-kit": "catalog:",
    "drizzle-zod": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "lint-staged": "catalog:",
    "nimiq-css": "catalog:",
    "simple-git-hooks": "catalog:",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "vite-plugin-top-level-await": "catalog:",
    "vite-plugin-wasm": "catalog:",
    "wrangler": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
